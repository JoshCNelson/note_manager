

<div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom box-shadow">
  <h1 class="my-0 mr-md-auto font-weight-bold h3"><%= link_to "My Notes", root_path, class: "text-dark text-decoration-none" %></h1>
  <nav class="my-2 my-md-0 mr-md-3">
    <% if logged_in? %>
      <span>Welcome, <%= current_user.username %></span>
    <% end %>

    <% if logged_in? %>
      <%= link_to "New Note", new_note_path, class: "p-2 text-dark" %>
      <%= link_to "Log Out", logout_path, class: "p-2 text-dark" %>
    <% else %>
      <%= link_to "Signup", signup_path, class: "p-2 text-dark" %>
      <%= link_to "Log In", login_path, class: "p-2 text-dark" %>
    <% end %>
  </nav>
</div>